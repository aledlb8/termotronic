---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.jsx";
import ChatBubble from "@components/chat-bubble.astro";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "https://www.termotronic.com/images/MetaLogoTermotronic.png",
  Astro.site,
).toString();

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://www.termotronic.com/images/MetaLogoTermotronic.png"
      rel="icon"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://www.termotronic.com/images/MetaLogoTermotronic.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="https://www.termotronic.com/images/MetaLogoTermotronic.png"
    />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Termotronic - Calentador ElÃ©ctrico de Agua sin Tanque.`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Termotronic Homepage Screenshot",
        },
      }}
    />
  </head>
  <body class="bg-gradient-to-br from-gray-50 via-white to-gray-100 min-h-screen">
    <Navbar client:load />
    <slot />
    <Footer />
    <ChatBubble chatUrl="https://wa.me/584142821856" />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      html {
        scroll-behavior: smooth;
      }
      body {
        background: linear-gradient(135deg, #f9fafb 0%, #ffffff 50%, #f3f4f6 100%);
        background-attachment: fixed;
      }
      img {
        content-visibility: auto;
      }
      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 10px;
      }
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }
      ::-webkit-scrollbar-thumb {
        background: #dc2626;
        border-radius: 5px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #b91c1c;
      }
    </style>
  </body>
</html>
