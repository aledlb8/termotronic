---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.jsx";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "https://shop.termotronic.com/image/catalog/TermotronicIco16x16.png",
  Astro.site
).toString();

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://shop.termotronic.com/image/catalog/TermotronicIco16x16.png" rel="icon" /> 
    <link rel="icon" type="image/png" href="https://shop.termotronic.com/image/catalog/TermotronicIco16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="https://shop.termotronic.com/image/catalog/TermotronicIco16x16.png"> 
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Termotronic - Calentador ElÃ©ctrico de Agua sin Tanque.`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Termotronic Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>

    

    <Navbar client:load />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      .body {
        background-color: rgb(224, 228, 231);
      }
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
