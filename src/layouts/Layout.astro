---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.jsx";
import ChatBubble from "@components/chat-bubble.astro";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "https://www.termotronic.com/images/MetaLogoTermotronic.png",
  Astro.site,
).toString();

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://www.termotronic.com/images/MetaLogoTermotronic.png"
      rel="icon"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://www.termotronic.com/images/MetaLogoTermotronic.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="https://www.termotronic.com/images/MetaLogoTermotronic.png"
    />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Termotronic - Calentador ElÃ©ctrico de Agua sin Tanque.`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Termotronic Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar client:load />
    <slot />
    <Footer />
    <ChatBubble chatUrl="https://wa.me/584142821856" />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      .body {
        background-color: rgb(224, 228, 231);
      }
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
