---
import { footerLinks } from "@content/config";
import Logos from "./logos.astro";
---

<footer
  class="relative mt-24 bg-gray-100 border-t border-gray-300 overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-gray-200/30 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gray-200/20 rounded-full blur-3xl -z-10"></div>

  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-5 mb-12">
      {
        footerLinks.map((section) => (
          <div>
            <h3 class="text-lg font-bold mb-4 text-gray-900 border-b-2 border-brand-200 pb-2">
              {section.title}
            </h3>
            <ul class="space-y-3">
              {section.items?.map((link) =>
                link.open ? (
                  <li>
                    <a
                      href={link.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-gray-600 hover:text-brand-600 transition-colors duration-300 flex items-center gap-2 group font-medium">
                      <span class="w-0 h-0.5 bg-brand-600 group-hover:w-4 transition-all duration-300"></span>
                      {link.title}
                    </a>
                  </li>
                ) : (
                  <li>
                    <a
                      href={link.href}
                      class="text-sm text-gray-600 hover:text-brand-600 transition-colors duration-300 flex items-center gap-2 group font-medium">
                      <span class="w-0 h-0.5 bg-brand-600 group-hover:w-4 transition-all duration-300"></span>
                      {link.title}
                    </a>
                  </li>
                ),
              )}
            </ul>
          </div>
        ))
      }
      <div class="flex flex-col items-center sm:items-start lg:col-span-2">
        <a href="/" class="mb-6 transition-transform duration-300 hover:scale-105">
          <img src="/images/logoTermotronic.png" width={200} alt="Termotronic Logo" />
        </a>
        <Logos />
      </div>
    </div>

    <div class="border-t-2 border-gray-200 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-center md:text-left text-sm text-gray-600">
          Copyright © 1994 - {new Date().getFullYear()} Termotronic. Todos los derechos reservados.<br />
          <span class="text-gray-500 font-medium">RIF J-301781899</span>
        </p>
        <div class="flex flex-col items-center md:items-end gap-3">
          <p class="text-sm text-gray-600 text-center md:text-right font-medium">
            +58 (212) 239.6165 · (212) 237.4551 · (212) 237.5083
          </p>
          <div class="flex gap-4">
            <a href="https://wa.me/584142821856" target="_blank" rel="noopener noreferrer"
              class="bg-green-500 hover:bg-green-600 text-white p-2 rounded-lg transition-all duration-300 hover:scale-110 shadow-medium">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
