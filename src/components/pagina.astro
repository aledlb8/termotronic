---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Icon } from "astro-icon/components";
import { leerCentrosServicio } from "../utils/centrosServicio.js";

// Leer y organizar centros de servicio
const centrosPorEstado = leerCentrosServicio();

// Ordenar estados alfabéticamente
const estadosOrdenados = Object.keys(centrosPorEstado).sort();

// Función para extraer el primer número de teléfono
function obtenerPrimerTelefono(telefonos) {
  // Dividir por: coma, punto y coma, barra (con o sin espacios), o espacios
  const numeros = telefonos.split(/\s*[,;\/]\s*|\s+/);
  return numeros[0].trim();
}

// Función para obtener el resto de números (después del primero)
function obtenerRestoDeTelefonos(telefonos) {
  // Dividir por: coma, punto y coma, barra (con o sin espacios), o espacios
  const numeros = telefonos.split(/\s*[,;\/]\s*|\s+/);
  if (numeros.length > 1) {
    const resto = numeros.slice(1).map(n => n.trim()).filter(n => n).join(' / ');
    return ' / ' + resto;
  }
  return null;
}

// Función para generar URL de WhatsApp (solo con el primer número)
function generarWhatsAppUrl(telefono) {
  // Limpiar el número: quitar espacios, guiones, paréntesis, puntos
  let numeroLimpio = telefono.replace(/[\s\-()\.]/g, '');
  // Quitar el primer 0 si existe
  if (numeroLimpio.startsWith('0')) {
    numeroLimpio = numeroLimpio.substring(1);
  }
  return `https://wa.me/58${numeroLimpio}`;
}
---

<Container>
  <Sectionhead>
    <Fragment slot="title">Garantías y Servicios</Fragment>
    <Fragment slot="desc">Red de Centros de Servicio Autorizados Termotronic y CBX</Fragment>
  </Sectionhead>

  <div class="mx-auto max-w-4xl">
    <div class="bg-gradient-to-r from-brand-50 to-primary-50 border-l-4 border-brand-500 p-6 rounded-r-xl shadow-soft mb-12">
      <p class="text-gray-700 text-lg leading-relaxed">
        Sus equipos Termotronic y CBX están amparados por una red de Centros de Servicio
        autorizados. Ellos cuentan con un amplio stock de repuestos y personal técnico
        altamente calificado.
      </p>
    </div>
  </div>

  <div class="mx-auto max-w-5xl mt-16">
    <h2 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent mb-8">
      Centros de Servicio Autorizados
    </h2>

    <div>
      {estadosOrdenados.map(estado => (
        <div class="mb-12">
          <h3 class="text-2xl font-bold bg-gradient-to-r from-green-700 to-green-600 bg-clip-text text-transparent mb-6 border-b-2 border-green-200 pb-2">
            {estado.toUpperCase()}
          </h3>

          {Object.keys(centrosPorEstado[estado])
            .sort()
            .map(ciudad => (
              <div class="mb-8">
                {Object.keys(centrosPorEstado[estado]).length > 1 && (
                  <h4 class="text-xl font-semibold text-gray-700 mb-4 ml-2">{ciudad}</h4>
                )}

                <div class="grid gap-4">
                  {centrosPorEstado[estado][ciudad]
                    .sort((a, b) => a.nombre.localeCompare(b.nombre))
                    .map((centro) => (
                      <div class="group p-6 border-l-4 border-green-500 bg-white rounded-r-xl shadow-soft hover:shadow-medium transition-all duration-300 hover:-translate-x-1">
                        <div class="flex items-start gap-4">
                          <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center">
                            <Icon class="w-6 h-6 text-white" name="mdi:tools" />
                          </div>
                          <div class="flex-1 space-y-1">
                            <h5 class="text-lg font-bold text-gray-900 group-hover:text-green-700 transition-colors">
                              {centro.nombre}
                            </h5>
                            <p class="text-gray-600 flex items-center gap-2">
                              <Icon class="w-4 h-4 text-gray-400" name="mdi:map-marker" />
                              {centro.direccion}
                            </p>
                            <p class="text-gray-500 text-sm">
                              {centro.ciudad}, Edo. {centro.estado}
                            </p>
                            <p class="text-orange-600 font-semibold flex items-center gap-2 flex-wrap">
                              <Icon class="w-4 h-4" name="mdi:phone" />
                              <span class="inline-flex items-center gap-1">
                                <span>{obtenerPrimerTelefono(centro.telefonos)}</span>
                                <a
                                  href={generarWhatsAppUrl(obtenerPrimerTelefono(centro.telefonos))}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="inline-flex items-center hover:scale-110 transition-transform"
                                  aria-label="Contactar por WhatsApp"
                                >
                                  <svg class="w-[1.2em] h-[1.2em] text-green-600" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.488"/>
                                  </svg>
                                </a>
                              </span>
                              {obtenerRestoDeTelefonos(centro.telefonos) && <span>{obtenerRestoDeTelefonos(centro.telefonos)}</span>}
                            </p>
                          </div>
                        </div>
                      </div>
                    ))}
                </div>
              </div>
            ))}
        </div>
      ))}
    </div>

    <div class="mt-12 bg-gradient-to-r from-amber-50 to-orange-50 border-l-4 border-amber-500 p-6 rounded-r-xl shadow-soft">
      <div class="flex items-start gap-4">
        <Icon class="w-6 h-6 text-amber-600 flex-shrink-0 mt-1" name="mdi:information" />
        <div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Nota Importante</h3>
          <p class="text-gray-700">
            Si su equipo está en garantía, recuerde tener a mano su <span class="font-semibold">Talón de Garantía</span> y su <span class="font-semibold">factura de compra</span> para optar por ella.
          </p>
        </div>
      </div>
    </div>
  </div>
</Container>