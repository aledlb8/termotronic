---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-6 py-3",
  md: "px-4 py-2",
};

const styles = {
  outline: "bg-white border-2 border-brand-600 hover:bg-brand-50 text-brand-600",
  primary: "bg-gradient-to-r from-brand-600 to-brand-700 text-white hover:from-brand-700 hover:to-brand-800 shadow-medium hover:shadow-large border-2 border-transparent",
  inverted: "bg-white text-brand-600 hover:bg-gray-50 border-2 border-transparent",
  muted: "bg-gray-100 hover:bg-gray-200 text-gray-700 border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-lg text-center transition-all duration-300 focus-visible:ring-2 ring-offset-2 ring-brand-200 hover:scale-105 font-semibold inline-flex items-center justify-center gap-2",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
