---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "CBX",
    price: "$160,50",
    popular: false,
    features: [
      "Agua caliente ilimitada.",
      "Agua caliente instantánea.",
      "Ahorro de espacio.",
      "Ahorro de energía hasta de un 60%",
    ],
    button: {
      text: "Mas Informacion",
      link: "/products/cbx",
    },
  },
  {
    name: "Termotronic",
    price: "$231,00",
    popular: true,
    features: [
      "Agua caliente ilimitada.",
      "Agua caliente instantánea.",
      "Ahorro de espacio.",
      "Ahorro de energía hasta de un 60%",
    ],
    button: {
      text: "Mas Informacion",
      link: "/products/termotronic",
    },
  },
  {
    name: "Kit de Instalacion",
    price: "$28,50",
    popular: false,
    features: [
      "Tuberías de Cobre.",
      "Válvula Múltiple.",
      "Válvula de alivio de presión.",
      "Filtro de paso rápido.",
    ],
    button: {
      text: "Mas Informacion",
      link: "/products/kit",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Precios</Fragment>
      <Fragment slot="desc"> Mejores calentadores de agua. </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
