---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "CBX Multivoltaje (CBX3)",
    manual: [
      {
        title: "Folleto / Catálogo",
        link: "/pdf/CatalogoCBX3.2024V1.1.pdf",
        icon: "mdi:file-document",
      },
      {
        title: "Manual de instalación y uso",
        link: "/pdf/CBX3_Manual_Propietario_V1.2.pdf",
        icon: "mdi:file-account",
      },
      {
        title: "Manual de Servicio",
        link: "/pdf/CBX3_Manual_Servicio_V1.4.pdf",
        icon: "mdi:file-cog",
      },
    ],
  },
  {
    title: "Termotronic (W4)",
    manual: [
      {
        title: "Folleto / Catálogo",
        link: "/pdf/CatalogoW4.2024V1.0.pdf",
        icon: "mdi:file-document",
      },
      {
        title: "Manual de instalación y uso",
        link: "/pdf/W4_Manual_Termotronic.pdf",
        icon: "mdi:file-account",
      },
      {
        title: "Manual de Servicio",
        link: "/pdf/W4_Manual_Servicio_Termotronic_CE-11W4_V1.1.pdf",
        icon: "mdi:file-cog",
      },
    ],
  },
  {
    title: "KIT de instalación",
    manual: [
      {
        title: "Folleto / Catálogo",
        link: "/pdf/CalatoloCE-KP2024V1.0.pdf",
        icon: "mdi:file-document",
      },
    ],
  },
];

const discontinued = [
  {
    title: "CBX 220V (CBX2)",
    manual: [
      {
        title: "Manual de uso",
        link: "/pdf/CBX2_Manual_.pdf",
        icon: "mdi:file-account",
      },
      {
        title: "Manual de Servicio",
        link: "/pdf/CBX2_Manual_Servicio.pdf",
        icon: "mdi:file-cog",
      },
    ],
  },
];
---

<Layout
  title="Manuales Termotronic y CBX Folletos y catálogos"
  description="Catálogos, Folletos, Manuales de instalación y Servicio para Termotronic y CBX">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Manuales y Documentación</Fragment>
      <Fragment slot="desc">Catálogos, folletos y manuales de nuestros productos</Fragment>
    </Sectionhead>

    <!-- Modelos vigentes -->
    <div
      class="flex flex-col gap-12 mt-12 max-w-4xl mx-auto">
      {
        features.map((item) => (
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">{item.title}</h3>
            <div class="grid gap-3">
              {item.manual.map((manual) => (
                <a href={manual.link} target="_blank" rel="noopener noreferrer" class="group">
                  <div class="flex items-center gap-4 p-5 rounded-xl border-2 border-gray-200 bg-white hover:bg-gradient-to-r hover:from-brand-50 hover:to-primary-50 hover:border-brand-300 shadow-soft hover:shadow-medium transition-all duration-300 hover:scale-[1.02]">
                    <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-brand-500 to-brand-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                      <Icon class="w-7 h-7 text-white" name={manual.icon} />
                    </div>
                    <div class="flex-1">
                      <h4 class="font-semibold text-lg text-gray-900 group-hover:text-brand-700 transition-colors">
                        {manual.title}
                      </h4>
                      <p class="text-sm text-gray-500">Descargar PDF</p>
                    </div>
                    <Icon class="w-5 h-5 text-gray-400 group-hover:text-brand-600 group-hover:translate-x-1 transition-all duration-300" name="mdi:download" />
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>


    <!-- Sección descontinuados -->
    <div class="mt-20 max-w-4xl mx-auto">
      <div class="flex items-center gap-3 mb-8">
        <h2 class="text-3xl font-bold text-gray-700">
          Equipos descontinuados
        </h2>
        <span class="px-3 py-1 text-sm font-semibold bg-red-600 text-white rounded-full">
          Descontinuado
        </span>
      </div>

      <div class="flex flex-col gap-12">
        {
          discontinued.map((item) => (
            <div class="space-y-4 opacity-75">
              <h3 class="text-2xl font-bold text-gray-700">{item.title}</h3>
              <div class="grid gap-3">
                {item.manual.map((manual) => (
                  <a href={manual.link} target="_blank" rel="noopener noreferrer" class="group">
                    <div class="flex items-center gap-4 p-5 rounded-xl border-2 border-gray-300 bg-gray-100 hover:bg-gray-200 hover:border-gray-400 shadow-soft hover:shadow-medium transition-all duration-300">
                      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <Icon class="w-7 h-7 text-white" name={manual.icon} />
                      </div>
                      <div class="flex-1">
                        <h4 class="font-semibold text-lg text-gray-700 group-hover:text-gray-900 transition-colors">
                          {manual.title}
                        </h4>
                        <p class="text-sm text-gray-500">Descargar PDF</p>
                      </div>
                      <Icon class="w-5 h-5 text-gray-400 group-hover:text-gray-600 group-hover:translate-x-1 transition-all duration-300" name="mdi:download" />
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</Layout>
