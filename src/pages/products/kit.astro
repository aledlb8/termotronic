---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import TabsComponent from "@components/navbar/tab";
import AnimatedBackground from "./kit";
---

<Layout title="Kit">
  <Container>
    <AnimatedBackground client:load />
    <Sectionhead>
      <p
        slot="title"
        class="font-bold text-2xl lg:text-4xl text-black flex justify-center items-center">
        Kit de Instalacion
      </p>
      <p
        slot="desc"
        class="font-bold text-xl lg:text-2xl text-gray-800 flex justify-center items-center">
        Para comenzar a disfrutar de la agua caliente sin limited, visite a
        nuestros&nbsp;<a class="text-blue-700 underline" href="/aliados"
          >aliados.</a
        >
      </p>
    </Sectionhead>

    <TabsComponent client:load product="kit" />
  </Container>
</Layout>
